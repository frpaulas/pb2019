{
	"name": "pb2019",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "./node_modules/.bin/vite dev",
		"build": "./node_modules/.bin/vite build",
		"preview": "./node_modules/.bin/vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"tauri": "./node_modules/.bin/tauri",
		"tauri:dev": "./node_modules/.bin/tauri dev",
		"tauri:build": "./node_modules/.bin/tauri build",
		"validate:source": "node scripts/validate-raw-format.cjs src/lib/data/services/source/",
		"convert:source": "node scripts/convert-raw-to-json.cjs src/lib/data/services/source/",
		"lint:dpb": "node scripts/lint-dpb.cjs src/lib/data/services/dpb/*.dpb",
		"rebuild:check": "./scripts/rebuild-outdated.sh"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@tauri-apps/cli": "^2.9.1",
		"@vitest/browser": "^3.2.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-virtual-scroll-list": "^1.3.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@storybook/svelte": "^9.1.6",
		"@tauri-apps/api": "^2.9.0",
		"@tauri-apps/plugin-shell": "^2.3.1"
	}
}
