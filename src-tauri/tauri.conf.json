{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "PB2019",
	"version": "0.0.1",
	"identifier": "com.pb2019.app",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:5173",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "PB2019 - Prayer Book",
				"width": 1024,
				"height": 768,
				"minWidth": 800,
				"minHeight": 600,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": ["icons/icon.png"],
		"linux": {
			"deb": {
				"depends": []
			}
		},
		"android": {
			"minSdkVersion": 24,
			"targetSdkVersion": 36
		}
	}
}
